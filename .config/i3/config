client.unfocused        #434745 #434745 #4A90D9 #454948
client.urgent           #CB4B16 #FDF6E3 #4A90D9 #268BD2
client.placeholder      #000000 #0c0c0c #ffffff #000000 #0c0c0c

client.background       #2B2C2B

